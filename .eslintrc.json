{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    // enable additional rules
    "linebreak-style": ["error", "windows"],

    // override default options
    "indent": ["error", 2],
    "no-unused-vars": "warn",
    
    // disable now, but enable in the future
    "func-names": "off",
    
    // disable
    "no-console": "off"
  }
}
